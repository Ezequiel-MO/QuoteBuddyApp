// 20230112133451
// https://raw.githubusercontent.com/standard/eslint-config-standard-react/master/eslintrc.json

{
  "extends": ["airbnb"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["react", "eslint-plugin-react-react"],
  "rules": {
    "react/jsx-no-bind": [
      "error",
      {
        "allowArrowFunctions": true,
        "allowBind": false,
        "ignoreRefs": true
      }
    ]
  }
}
